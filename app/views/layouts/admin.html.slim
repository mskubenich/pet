html(lang="en")
  head
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "admin", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "i18n"
    = javascript_include_tag "translations"
    = csrf_meta_tags
  body ng-app="petModeAdminApp" style="padding-top: 70px;"
    nav.navbar.navbar-default.navbar-fixed-top role="navigation"
      .container
        .navbar-header
          a.navbar-brand{ href=admin_path}
            | Petmode
        .navbar-collapse.collapse.navbar-responsive-collapse
          ul.nav.navbar-nav.navbar-right
            li
              = link_to root_path do
                i.fa.fa-sign-out
    .container ng-controller="AdminHomeController"
      .row
        .col-md-3
          .well
            ul.sidebar-nav style="padding: 0"
              ul.nav.nav-pills.nav-stacked
                li role="presentation" ng-class="{'active' : $state.current.name == 'users' }"
                  a href="#users"
                    | Users
                li role="presentation" ng-class="{'active' : $state.current.name == 'news' }"
                  a href="#news"
                    | News
        .col-md-9
          div ui-view=true

    footer
      .container
        | Copyright @2015, Petmode